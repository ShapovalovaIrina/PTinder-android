<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/user_profile_linear_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:paddingEnd="20dp">

            <EditText
                android:id="@+id/pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ems="12"
                android:inputType="textPersonName"
                android:text="@string/enter_pet_name" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/pet_age"
                android:fontFamily="sans-serif"
                android:text="Введите возраст"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/pet_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ems="2"
                android:inputType="number"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="177dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/gender_spinner"
                android:fontFamily="sans-serif"
                android:text="Пол"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:entries="@array/petGender" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/type_spinner"
                android:fontFamily="sans-serif"
                android:text="Тип"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/type_spinner"
                android:layout_centerHorizontal="true"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:entries="@array/petTypes" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp">

            <EditText
                android:id="@+id/pet_breed"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:ems="12"
                android:inputType="textPersonName"
                android:text="Введите породу"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="122dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/purpose_spinner"
                android:fontFamily="sans-serif"
                android:text="Цель"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/purpose_spinner"
                android:layout_width="175dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:entries="@array/petPurposes" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp">

            <EditText
                android:id="@+id/comment"
                android:layout_width="260dp"
                android:layout_height="150dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp">

            <Button
                android:id="@+id/save_pet"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="onSavePetClick"
                android:text="Сохранить" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>